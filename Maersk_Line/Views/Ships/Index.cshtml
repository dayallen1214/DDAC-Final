@model IEnumerable<Maersk_Line.Models.Ships>

@{
    ViewBag.Title = "Shipments Registration";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("New Shipments Registration", "Create")
</p>
<table class="table table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShipName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfContainersCarried)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShipName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShipDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfContainersCarried)
        </td>
        <td>
            @Html.ActionLink("Shipments Registration Edit", "Edit", new { id=item.ShipCode }) |
            @Html.ActionLink("Shipments Registration Details", "Details", new { id=item.ShipCode }) |
            @Html.ActionLink("Shipments Registration Delete", "Delete", new { id=item.ShipCode })
        </td>
    </tr>
}

</table>
